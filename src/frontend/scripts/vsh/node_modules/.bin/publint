#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/d/github/Ncp.Admin/frontend/node_modules/.pnpm/publint@0.3.16/node_modules/publint/src/node_modules:/mnt/d/github/Ncp.Admin/frontend/node_modules/.pnpm/publint@0.3.16/node_modules/publint/node_modules:/mnt/d/github/Ncp.Admin/frontend/node_modules/.pnpm/publint@0.3.16/node_modules:/mnt/d/github/Ncp.Admin/frontend/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/mnt/d/github/Ncp.Admin/frontend/node_modules/.pnpm/publint@0.3.16/node_modules/publint/src/node_modules:/mnt/d/github/Ncp.Admin/frontend/node_modules/.pnpm/publint@0.3.16/node_modules/publint/node_modules:/mnt/d/github/Ncp.Admin/frontend/node_modules/.pnpm/publint@0.3.16/node_modules:/mnt/d/github/Ncp.Admin/frontend/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../publint/src/cli.js" "$@"
else
  exec node  "$basedir/../publint/src/cli.js" "$@"
fi
